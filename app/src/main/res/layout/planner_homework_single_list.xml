<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        style="@style/planner_homework_single_list_text_view"
        android:id="@+id/homework_title"
        android:layout_width="wrap_content"
        tools:text="title"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"/>


    <TextView
        style="@style/planner_homework_single_list_text_view"
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        tools:text="date"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        style="@style/planner_homework_single_list_text_view"
        android:id="@+id/due_date_text_view"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:text="@string/due"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/date_text_view"
        android:layout_toStartOf="@+id/date_text_view"/>

    <TextView
        style="@style/planner_homework_single_list_text_view"
        tools:text="time"
        android:layout_width="wrap_content"
        android:id="@+id/time_text_view"
        android:layout_alignParentRight="true"
        android:layout_below="@id/due_date_text_view"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/planner_homework_single_list_text_view"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:text="@string/at"
        android:layout_toLeftOf="@id/time_text_view"
        android:layout_below="@id/due_date_text_view"
        android:layout_height="wrap_content"/>

</RelativeLayout>